<div class="container-fluid">
  <div class="row">
    <%= render 'main/sidebar' %>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <p id="notice"><%= notice %></p>
      <h1 class="page-header">Alerts</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Frequency</th>
      <th>Message</th>
      <th>Threshold</th>
      <th>Comparison</th>
      <th>Active</th>
      <th>User</th>
      <th>Sensor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.alert_type %></td>
        <td><%= alert.frequency %></td>
        <td><%= alert.message %></td>
        <td><%= alert.threshold %></td>
        <td><%= alert.comparison %></td>
        <td><%= alert.active %></td>
        <td><%= alert.user %></td>
        <td><%= alert.sensor %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alert', new_alert_path, class: "btn btn-warning" %> 
    </div>
  </div>
</div>
<script>
  $(document).ready(function () {
    $(".nav li").removeClass("active");
    $('#alerts').addClass('active');
  });
</script>
